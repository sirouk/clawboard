{
  "name": "clawboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:backend": "bash scripts/test_backend.sh",
    "test:classifier": "python3 -m unittest discover -s classifier/tests -p \"test_*.py\" && python3 -m unittest discover -s tests/classifier -p \"test_*.py\"",
    "test:logger": "node --test extensions/clawboard-logger/*.test.mjs",
    "test:scripts": "node --test tests/scripts/*.test.mjs",
    "test": "playwright test",
    "test:e2e": "playwright test",
    "test:visual": "playwright test -c playwright.visual.config.ts",
    "test:visual:update": "playwright test -c playwright.visual.config.ts --update-snapshots",
    "test:all": "npm run lint && npm run test:backend && npm run test:classifier && npm run test:logger && npm run test:scripts && npm run build && npm run test:e2e",
    "check:publish-safety": "bash scripts/check_publish_safety.sh"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
