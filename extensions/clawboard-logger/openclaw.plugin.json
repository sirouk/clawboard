{
  "id": "clawboard-logger",
  "name": "Clawboard Logger",
  "description": "Always-on logging bridge from OpenClaw to Clawboard.",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": { "type": "string" },
      "token": { "type": "string" },
      "enabled": { "type": "boolean" },
      "queuePath": { "type": "string" },
      "contextAugment": { "type": "boolean" },
      "contextMaxChars": { "type": "number" },
      "contextTopicLimit": { "type": "number" },
      "contextTaskLimit": { "type": "number" },
      "contextLogLimit": { "type": "number" }
    },
    "required": ["baseUrl"]
  },
  "uiHints": {
    "baseUrl": { "label": "Clawboard Base URL", "placeholder": "http://clawboard:8010" },
    "token": { "label": "Clawboard Token", "sensitive": true },
    "queuePath": { "label": "Queue file path" },
    "enabled": { "label": "Enabled" },
    "contextAugment": { "label": "Inject context before agent start" },
    "contextMaxChars": { "label": "Max context chars" },
    "contextTopicLimit": { "label": "Max context topics" },
    "contextTaskLimit": { "label": "Max context tasks" },
    "contextLogLimit": { "label": "Max recent thread entries" }
  }
}
