{
  "id": "clawboard-logger",
  "name": "Clawboard Logger",
  "description": "Always-on logging bridge from OpenClaw to Clawboard.",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": { "type": "string" },
      "token": { "type": "string" },
      "enabled": { "type": "boolean" },
      "queuePath": { "type": "string" },
      "contextAugment": { "type": "boolean" },
      "contextMode": { "type": "string", "enum": ["auto", "cheap", "full", "patient"] },
      "contextFetchTimeoutMs": { "type": "number" },
      "contextFetchRetries": { "type": "number" },
      "contextFallbackModes": {
        "type": "array",
        "items": { "type": "string", "enum": ["auto", "cheap", "full", "patient"] }
      },
      "contextCacheTtlMs": { "type": "number" },
      "contextCacheMaxEntries": { "type": "number" },
      "contextUseCacheOnFailure": { "type": "boolean" },
      "contextMaxChars": { "type": "number" },
      "contextTopicLimit": { "type": "number" },
      "contextTaskLimit": { "type": "number" },
      "contextLogLimit": { "type": "number" },
      "enableOpenClawMemorySearch": { "type": "boolean" }
    },
    "required": ["baseUrl"]
  },
  "uiHints": {
    "baseUrl": { "label": "Clawboard Base URL", "placeholder": "http://clawboard:8010" },
    "token": { "label": "Clawboard Token", "sensitive": true },
    "queuePath": { "label": "Queue file path" },
    "enabled": { "label": "Enabled" },
    "contextAugment": { "label": "Inject context before agent start" },
    "contextMode": { "label": "Context mode", "placeholder": "auto" },
    "contextFetchTimeoutMs": { "label": "Context fetch timeout (ms)" },
    "contextFetchRetries": { "label": "Context fetch retries per mode" },
    "contextFallbackModes": { "label": "Context fallback modes (ordered)" },
    "contextCacheTtlMs": { "label": "Context cache TTL (ms)" },
    "contextCacheMaxEntries": { "label": "Context cache max entries" },
    "contextUseCacheOnFailure": { "label": "Use cached context on fetch failure" },
    "contextMaxChars": { "label": "Max context chars" },
    "contextTopicLimit": { "label": "Max context topics" },
    "contextTaskLimit": { "label": "Max context tasks" },
    "contextLogLimit": { "label": "Max recent thread entries" },
    "enableOpenClawMemorySearch": { "label": "Allow OpenClaw memory search" }
  }
}
