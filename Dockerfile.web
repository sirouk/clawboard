FROM node:20-alpine

WORKDIR /app

ARG NEXT_PUBLIC_CLAWBOARD_API_BASE=http://localhost:8000
ENV NEXT_PUBLIC_CLAWBOARD_API_BASE=$NEXT_PUBLIC_CLAWBOARD_API_BASE
ENV NEXT_TELEMETRY_DISABLED=1

COPY package.json package-lock.json ./
RUN npm ci

COPY . .

RUN npm run build

EXPOSE 3000

CMD ["npm", "run", "start", "--", "-p", "3000"]
